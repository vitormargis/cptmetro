{
  "name": "cptmetro",
  "version": "1.1.8",
  "description": "A CLI to show rails system status for SÃ£o Paulo",
  "main": "lib/index.js",
  "scripts": {
    "clear": "rimraf lib",
    "build": "npm run clear && npm run build:cli && npm run build:crawler",
    "build:cli": "./node_modules/.bin/babel --out-dir lib cli",
    "build:crawler": "./node_modules/.bin/babel --out-dir lib crawler",
    "build:watch": "npm run build -- --watch",
    "lint:api": "./node_modules/.bin/eslint api/*.js",
    "lint:cli": "./node_modules/.bin/eslint cli/*.js",
    "lint:crawler": "./node_modules/.bin/eslint crawler/*.js",
    "lint": "bpm run lint:api && bpm run lint:cli && bpm run lint:crawler",
    "prepush": "npm run lint"
  },
  "preferGlobal": true,
  "files": [
    "lib"
  ],
  "bin": {
    "cptmetro": "lib/cli.js"
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vitormargis/cptmetro.git"
  },
  "keywords": [
    "js",
    "library",
    "metro"
  ],
  "author": "Vitor Margis <vitor@margis.com.br> (https://vitormargis.com.br/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vitormargis/cptmetro/issues"
  },
  "homepage": "https://github.com/vitormargis/cptmetro#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^3.5.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-plugin-import": "^2.12.0",
    "husky": "^0.11.9",
    "mocha": "^3.5.3",
    "nock": "^9.3.2",
    "nyc": "^10.3.2",
    "rimraf": "^2.6.2",
    "sinon": "^2.4.1",
    "sinon-chai": "^2.14.0",
    "webpack": "^3.5.5"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "cheerio": "^1.0.0-rc.2",
    "cli-table": "^0.3.1",
    "commander": "^2.15.1",
    "node-fetch": "^1.7.2",
    "ora": "^1.4.0",
    "request": "^2.87.0"
  }
}
